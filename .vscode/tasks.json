{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "NG Serve Frontend",
            "type": "shell",
            "command": "cd ${workspaceFolder}/frontend && ng serve",
            "problemMatcher": []
        },
        {
            "label": "Nodemon Backend",
            "type": "shell",
            "command": "cd ${workspaceFolder}/TravelExpress && nodemon ./bin/www",
            "problemMatcher": []
        },
        {
            "label": "Start Mongo DB",
            "type": "shell",
            "command": "sudo service mongod start",
            "problemMatcher": []
        },
        {
            "label": "Serve backend and frontend",
            "dependsOn": [
                "Nodemon Backend",
                "NG Serve Frontend"
            ],
            "problemMatcher": []
        },
        {
            "label": "ng serve",
            "type": "npm",
            "script": "start",
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "problemMatcher": {
              "owner": "typescript",
              "source": "ts",
              "applyTo": "closedDocuments",
              "fileLocation": [
                "relative",
                "${cwd}"
              ],
              "pattern": "$tsc",
              "background": {
                "activeOnStart": true,
                "beginsPattern": {
                  "regexp": "Compiling...|TS\\d+:"
                },
                "endsPattern": {
                  "regexp": "Compiled |Failed to compile."
                }
              }
            }
          }
        
    ]
}